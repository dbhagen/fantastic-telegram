{
  "name": "fantastic-telegram",
  "version": "1.0.0",
  "description": "Demo REST Application",
  "main": "src/index.js",
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest -i --colors --verbose --coverage --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js",
    "docker:clean": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml down; docker-compose -f docker-compose.yml -f docker-compose.dev.yml down; docker-compose -f docker-compose.yml -f docker-compose.test.yml down",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "act:push": "act push --pull=false --env RUNNER_DEBUG=0 --container-architecture linux/amd64",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Daniel Hagen <daniel.b.hagen@gmail.com>",
  "engines": {
    "node": ">=18.16.1"
  },
  "packageManager": "pnpm@8.7.0",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-xss-sanitizer": "^1.1.6",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "joi": "^17.10.0",
    "log-timestamp": "^0.3.0",
    "pm2": "^5.3.0",
    "rate-limiter-flexible": "^2.4.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@actions/core": "^1.10.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-extended": "^4.0.1",
    "jest-runner-eslint": "^2.1.0",
    "lint-staged": "^14.0.1",
    "mock-fs": "^5.2.0",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "pnpm": {
    "overrides": {
      "semver@>=6.0.0 <6.3.1": ">=6.3.1",
      "tough-cookie@<4.1.3": ">=4.1.3"
    }
  }
}
